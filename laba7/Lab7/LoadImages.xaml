<UserControl x:Class="Lab7.LoadImages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab7"
             mc:Ignorable="d" 
             x:Name="imageBrowserControl" Width="400" Height="400">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image x:Name="IBCImage" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" VerticalAlignment="Top" Height="255" Margin="25,0,20,0"  />
        <TextBox x:Name="IBCTextBox" Grid.Row="1" Text="Sourse" TextWrapping="Wrap"  Height="30" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,85" Width="400" IsEnabled="False" />
        <Button x:Name="IBCButton" Grid.Row="1" HorizontalAlignment="Right" Width="110" Height="30" Content="Browse" Grid.Column="2" Click="FBCButton_Click" />

    </Grid>
</UserControl>
